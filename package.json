{
  "name": "iraq-satellite-tracker",
  "version": "1.0.0",
  "description": "النظام العراقي لتتبع الأقمار الصناعية - تطوير المهندس حسين فاهم الخزعلي 2026",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "setup:iraq": "python setup_iraq.py"
  },
  "keywords": [
    "عراق",
    "أقمار صناعية",
    "تتبع",
    "فضاء",
    "هندسة اتصالات"
  ],
  "author": "المهندس حسين فاهم الخزعلي",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  }
}